<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/top_yxs_color">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/fixed_region_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置固定的时区"
            android:textSize="@dimen/text_size_16sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/big_text_color"/>

        <TextView
            android:id="@+id/fixed_region_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="香港时间（GMT+8:00）"
            android:textSize="@dimen/text_size_16sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/small_text_color"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/enter" />


</LinearLayout>

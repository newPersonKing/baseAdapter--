<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_top"/>
    <include layout="@layout/include_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/setting_title_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_wifi_streng_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="信号强度"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/top_yxs_color"/>

            <TextView
                android:id="@+id/tv_streng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="较强"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/top_yxs_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_entry_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="加密类型"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/top_yxs_color"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wep"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/top_yxs_color"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_password_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/top_yxs_color"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/text_size_16sp"/>

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/wlan_sr"
            android:layout_marginTop="@dimen/dp_10"
            android:clickable="true"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wlan_aj2_a"
                android:text="取消"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/top_yxs_color"/>

            <Button
                android:id="@+id/btn_connect"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wlan_aj1_a"
                android:text="连接"
                android:textSize="@dimen/text_size_18sp"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/top_yxs_color"/>

        </LinearLayout>
    </LinearLayout>




</LinearLayout>

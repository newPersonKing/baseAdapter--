<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/list_back_color">

    <include layout="@layout/layout_top"/>
    <include layout="@layout/include_title_layout"/>

    <TextView
        android:id="@+id/tv_an_voice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按键声音"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/top_yxs_color"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/text_size_16sp"/>

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seekbar_an"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:bsb_min="0"
        app:bsb_max="100.0"
        app:bsb_progress="200.0"
        app:bsb_second_track_color="@color/green"
        app:bsb_track_size="4dp"
        app:bsb_hide_bubble="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_weight="1"
            android:textColor="@color/top_yxs_color"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/top_yxs_color"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_media_voice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="媒体声音"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/top_yxs_color"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/text_size_16sp" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seekbar_mt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:bsb_max="100"
        app:bsb_min="0"
        app:bsb_progress="200.0"
        app:bsb_second_track_color="@color/green"
        app:bsb_track_size="4dp"
        app:bsb_always_show_bubble="true"
        app:bsb_hide_bubble="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_weight="1"
            android:textColor="@color/top_yxs_color"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/top_yxs_color"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>

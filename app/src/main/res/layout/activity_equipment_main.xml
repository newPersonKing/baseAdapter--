<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/setting_title_back">

    <include layout="@layout/layout_top"/>
    <include layout="@layout/include_title_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/setting_title_back">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_basic_message"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/setting_title_back"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="设备信息"
                android:textColor="@color/top_yxs_color"
                android:textSize="@dimen/text_size_16sp" />

            <LinearLayout
                android:id="@+id/ll_equipment_orc"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/top_yxs_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:id="@+id/tv_device_ocr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="设备二维码"
                    android:textColor="@color/big_text_color"
                    android:textSize="20sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/enter" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_equipment_type"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/top_yxs_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:id="@+id/tv_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="型号"
                    android:textColor="@color/big_text_color"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/tv_system_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/small_text_color"
                    android:textSize="20sp"
                    android:text="EPU"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_equipment_version"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/top_yxs_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:id="@+id/tv_system_version_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="系统版本"
                    android:textColor="@color/big_text_color"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/tv_system_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/small_text_color"
                    android:text="1.0.1"
                    android:textSize="20sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_storege_message"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/setting_title_back"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="存储信息"
                android:textColor="@color/top_yxs_color"
                android:textSize="@dimen/text_size_16sp" />


            <LinearLayout
                android:id="@+id/ll_equipment_storage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/top_yxs_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:id="@+id/tv_run_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="运行内存"
                    android:textColor="@color/big_text_color"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/tv_run_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="2.0G"
                    android:textSize="20sp"
                    android:textColor="@color/small_text_color"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_equipment_memory"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/top_yxs_color"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:id="@+id/tv_phone_storage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="手机存储"
                    android:textColor="@color/big_text_color"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_usable_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="可用空间：2.0G"
                        android:textSize="14sp"
                        android:textColor="@color/small_text_color"/>

                    <TextView
                        android:id="@+id/tv_all_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="总容量：2.0G"
                        android:textSize="14sp"
                        android:textColor="@color/small_text_color"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>

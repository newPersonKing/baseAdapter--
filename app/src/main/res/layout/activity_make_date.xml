<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/setting_title_back">

    <include layout="@layout/layout_top"/>
    <include layout="@layout/include_title_layout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_time_back">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">
            <ImageView
                android:id="@+id/year_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sj_shang_a"/>

            <ImageView
                android:id="@+id/month_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sj_shang_a"
                android:layout_marginLeft="@dimen/dp_5"/>

            <ImageView
                android:id="@+id/day_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sj_shang_a"
                android:layout_marginLeft="@dimen/dp_5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2018"
                android:textSize="@dimen/text_size_18sp" />


            <TextView
                android:id="@+id/tv_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2018"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="08"
                android:textSize="@dimen/text_size_18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">
            <ImageView
                android:id="@+id/year_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sj_xia_a"/>

            <ImageView
                android:id="@+id/month_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sj_xia_a"
                android:layout_marginLeft="@dimen/dp_5"/>

            <ImageView
                android:id="@+id/day_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sj_xia_a"
                android:layout_marginLeft="@dimen/dp_5"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wlan_aj2_a"
            android:text="取消"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/top_yxs_color"/>

        <Button
            android:id="@+id/btn_sure"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wlan_aj1_a"
            android:text="确定"
            android:textSize="@dimen/text_size_18sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/top_yxs_color"/>

    </LinearLayout>

</LinearLayout>


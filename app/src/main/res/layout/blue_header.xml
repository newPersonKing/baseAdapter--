<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/money_unit_color">

    <TextView
        android:id="@+id/tv_turn_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/setting_title_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:text="开关"
        android:textColor="@color/top_yxs_color"
        android:textSize="@dimen/text_size_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/top_yxs_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_blue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝牙"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:textColor="@color/big_text_color"/>

        <com.fanwe.lib.switchbutton.FSwitchButton
            android:id="@+id/blue_switch"
            android:layout_width="50dp"
            android:layout_height="25dp"
            app:sbImageChecked="@drawable/sz_kgy"
            app:sbImageNormal="@drawable/sz_kgn"
            app:sbIsChecked="true"
            android:layout_marginRight="@dimen/dp_10"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/top_yxs_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/open_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开放检测"
                android:textSize="20sp"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/big_text_color"/>

            <TextView
                android:id="@+id/check_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许周围设备检测到（2:00）"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/small_text_color"/>

        </LinearLayout>

        <com.fanwe.lib.switchbutton.FSwitchButton
            android:id="@+id/blue_check_switch"
            android:layout_width="50dp"
            android:layout_height="25dp"
            app:sbImageChecked="@drawable/sz_kgy"
            app:sbImageNormal="@drawable/sz_kgn"
            app:sbIsChecked="true"
            android:layout_marginRight="@dimen/dp_10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting_blue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/top_yxs_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_1">

        <TextView
            android:id="@+id/tv_equipment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:text="设备名称"
            android:textColor="@color/big_text_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setting_blue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="EUP"
            android:textColor="@color/big_text_color"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/enter" />

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/blue_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/setting_title_back">
        <TextView
            android:id="@+id/tv_can_use_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="可用设备"
            android:textColor="@color/top_yxs_color"
            android:textSize="@dimen/text_size_16sp" />

        <ImageView
            android:id="@+id/iv_blue_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wlan_sx"/>
    </LinearLayout>


</LinearLayout>

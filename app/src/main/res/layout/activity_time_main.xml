<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/list_back_color">

    <include layout="@layout/layout_top"/>
    <include layout="@layout/include_title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/money_unit_color">

        <TextView
            android:id="@+id/tv_turn_on_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/setting_title_back"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="开关"
            android:textColor="@color/top_yxs_color"
            android:textSize="@dimen/text_size_16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/top_yxs_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_1">


            <TextView
                android:id="@+id/tv_Automatic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:text="自动确定时区"
                android:textColor="@color/big_text_color"
                android:textSize="20sp" />

            <com.fanwe.lib.switchbutton.FSwitchButton
                android:id="@+id/time_switch"
                android:layout_width="50dp"
                android:layout_height="25dp"
                app:sbImageChecked="@drawable/sz_kgy"
                app:sbImageNormal="@drawable/sz_kgn"
                app:sbIsChecked="true"
                android:layout_marginRight="@dimen/dp_10"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_time_date"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/top_yxs_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_1">


            <TextView
                android:id="@+id/tv_date_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:text="日期"
                android:textColor="@color/small_text_color"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_time_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="2018年"
                android:textColor="@color/small_text_color"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/enter" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time_time"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/top_yxs_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_1">


            <TextView
                android:id="@+id/tv_time_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:text="时间"
                android:textColor="@color/small_text_color"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_time_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="15:06"
                android:textColor="@color/small_text_color"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/enter" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_double_time_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/setting_title_back"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:text="双时钟"
            android:textColor="@color/top_yxs_color"
            android:textSize="@dimen/text_size_16sp" />

        <LinearLayout
            android:id="@+id/ll_double_time"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/top_yxs_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_double_time_name_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="双时钟"
                    android:textSize="18sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/big_text_color"/>

                <TextView
                    android:id="@+id/tv_double_time_show_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在锁屏界面显示双时钟"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/small_text_color"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/enter" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/list_back_color">

    <include layout="@layout/layout_top"/>
    <include layout="@layout/include_title_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_clear_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/top_yxs_color"
                android:textSize="@dimen/text_size_18sp"
                android:text="此操作会清除您设备中的应用数据，包括："/>

            <TextView
                android:id="@+id/tv_clear_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/top_yxs_color"
                android:textSize="@dimen/text_size_18sp"
                android:text="此操作会清除您设备中的应用数据，包括："/>


            <Button
                android:id="@+id/btn_recovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恢复出厂"
                android:textColor="@color/top_yxs_color"
                android:background="@drawable/aj3_a"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
